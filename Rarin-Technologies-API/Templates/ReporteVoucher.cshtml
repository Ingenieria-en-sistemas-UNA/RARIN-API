<Rarin_Technologies_API.Entities.Voucher>

    <html>

    <head>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

        <style>
            body {
                font-family: Arial;
            }

            .col-8 {
                margin: auto;
            }

            table {
                margin: auto;
                background-color: #458ace;
                text-align: left;
                border-collapse: collapse;
                width: 80%;
            }


            th, td {
                padding: 20px;
            }

            thead {
                background-color: #808080;
                border-bottom: solid 5px #0F362D;
                color: white;
            }

            tr:nth-child(even) {
                background-color: #ddd;
            }


            tr:hover td {
                background-color: #369681;
                color: white;
            }
        </style>

    </head>

    <body>
        <div class="col-8 row">

            <div class="col-8 text-center">Reporte de Factura</div>
        </div>
        <div>

            <table>

                @foreach (var voucher in Model)
                {

                    <div style="overflow-x:initial;">


                    </div>

                    <div>

                        <tr>
                            <th>  <span>Items :</span></th>


                        </tr>

                    </div>
                    <div>
                        <tr>
                            <td><span class="Total">Su total:</td>
                            <td> <span class="Total item"></td>

                        </tr>
                    </div>
                    <div>
                        <tr>
                            <td> <span class="car-name">@voucher.Items</span></td>

                        </tr>
                    </div>

                    <div> <strong> <span>Id :</span></strong></div>
                    <span class="car-name">@voucher.Id</span>

                    <div> <strong><span>Id Cliente :</span></strong></div>
                    <span class="car-name">@voucher.ClientId</span>


                    <div> <strong><span>Detalle:</span> </strong></div>
                    <span class="car-registration">@voucher.Detail</span>
                    <br />
                }
            </table>

</body>

</html>

